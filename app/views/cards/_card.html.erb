<div class="col s4">
    <div class="card">
        <div class="card-image">
            <img src="http://lorempixel.com/640/480/abstract/9">
            <span class="card-title"><%= course.title %></span>
        </div>
        <div class="card-content">
            <p>
                <%= truncate(course.description, :length => 100) %>
            </p>
            <div class="row valign-wrapper">
                <div class="col s12">
                    <div class="chip indigo white-text">
                        <%= course.subjectstring %>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-action">
            <div class="row">
                <div class="col s4">
                    <%= link_to 'View', course %>
                </div>

            </div>
        </div>
    </div>
</div>
